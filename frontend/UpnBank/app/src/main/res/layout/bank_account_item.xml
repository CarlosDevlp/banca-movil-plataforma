<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/border_gray_strong_background"
              android:id="@+id/card_item_whole"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
               >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/bank_account_item_padding"
        android:paddingEnd="@dimen/bank_account_item_padding"
        android:paddingTop="@dimen/bank_account_item_padding"
        android:paddingBottom="@dimen/bank_account_item_padding"
        android:layout_gravity="start"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_account_type"
            style="@style/UpnBank.AccountTypeText"
            android:text="Cuenta de crÃ©dito"
            />
        <TextView
            android:id="@+id/txt_account_number"
            style="@style/UpnBank.AccountNumberText"
            android:text="123"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/bank_account_item_padding"
        android:paddingEnd="@dimen/bank_account_item_padding"
        android:paddingTop="@dimen/bank_account_item_padding"
        android:paddingBottom="@dimen/bank_account_item_padding"
        android:layout_gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_currency_type"
            style="@style/UpnBank.CurrencyType"
            android:layout_gravity="end"
            android:text="Tipo de moneda"
            />

        <TextView
            android:id="@+id/txt_account_money"
            style="@style/UpnBank.AccountMoney"
            android:layout_gravity="end"
            android:text="$/200"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>