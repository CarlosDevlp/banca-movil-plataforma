<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/service_item_padding"
    android:paddingLeft="@dimen/service_item_padding"
    android:paddingRight="@dimen/service_item_padding"
    android:paddingTop="@dimen/service_item_padding"
    >
    <TextView
        style="@style/UpnBank.BasicText"
        android:id="@+id/txt_service_name"
        android:textColor="@color/colorAccent"
        />
    <ImageView
        android:id="@+id/img_service_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        />
</android.support.v7.widget.CardView>
