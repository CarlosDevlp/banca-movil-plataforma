<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--estilos de upn bank-->
    <style name="UpnBank">
    </style>

    <!--botones options-->
    <style name="UpnBank.OptionsButtons" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/border_radius_main_menu</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/frm_main_btn_options_height</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">@dimen/menu_item_padding_left</item>
        <item name="android:paddingEnd">@dimen/menu_item_padding_left</item>
    </style>

    <!--edittextbox para tarjeta de crÃ©dito-->
    <style name="UpnBank.CreditCardEditBox">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">number</item>
        <item name="android:textAlignment">center</item>
        <item name="android:hint">- - - -</item>
    </style>

    <style name="UpnBank.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/subtitle</item>
    </style>


    <style name="UpnBank.Subtitle.FullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="UpnBank.BasicText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>



    <style name="UpnBank.ToggleButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/choice_toggle_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--estilos para los componentes de operaciones-->
    <style name="UpnBank.OperationTypeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/account_type</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UpnBank.OperationDatetimeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UpnBank.OperationMoney">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--estilos para los componentes de las cuentas bancarias y tarjetas-->
    <style name="UpnBank.AccountTypeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/account_type</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UpnBank.AccountNumberText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UpnBank.AccountMoney">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="UpnBank.CurrencyType">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
